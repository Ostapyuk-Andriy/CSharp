@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="d-flex justify-content between gap-3">
    <div>
    <h1>Register</h1>
    <form asp-action="UserCreate" asp-controller="User" method="post">
        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Confirm"></label>
            <input asp-for="Confirm" class="form-control">
            <span asp-validation-for="Confirm" class="text-danger"></span>
        </div>
        <div>
            <button class="btn btn-success">Register</button>
        </div>
    </form>
    </div>
    <div>
        <h1>Log In</h1>
        @await Html.PartialAsync("~/Views/Home/_Login.cshtml")
    </div>    
</div>

