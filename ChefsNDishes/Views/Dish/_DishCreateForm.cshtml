
@model Dish


<div class="text-center">
    <h1>Add a new Dish!</h1>
    <div>
        <h3><a href="/">Chefs</a> | <a href="/Dish/Show">Dishes</a> | <a href="/Chef/New">Add a Chef</a> | Add a Dish</h3>
    </div>
    <form asp-action="DishCreate" asp-controller="Dish" method="post">
        <div class="mb-3">
            <label asp-for="DishName"></label>
            <input asp-for="DishName" class="form-control">
            <span asp-validation-for="DishName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Calories"></label>
            <input asp-for="Calories" class="form-control">
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" name="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ChefId">Chef's Name</label>
            <select asp-for="ChefId" name="ChefId">
                @foreach (Chef c in ViewBag.AllChefs)
                {
                    <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                }
            </select>
            
        </div>
        <div>
            <button>Add a Dish</button>
        </div>
    </form>
</div>