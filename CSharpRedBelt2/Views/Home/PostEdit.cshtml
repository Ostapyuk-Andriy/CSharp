@{
    ViewData["Title"] = "Edit Post";
}
@model Post
@await Html.PartialAsync("~/Views/Home/_NavBar.cshtml")
<form asp-action="PostUpdate" asp-route-id = "@Model.PostId" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Image">Image (URL format please)</label><br>
        <input type="text" asp-for="Image"><br>
        <span class="text-danger" asp-validation-for="Image"></span><br>
    </div>
    <div class="form-group">
        <label asp-for="Title">Title</label><br>
        <input type="text" asp-for="Title"><br>
        <span class="text-danger" asp-validation-for="Title"></span><br>
    </div>
    <div class="form-group">
        <label asp-for="Medium">Medium</label><br>
        <input type="text" asp-for="Medium"><br>
        <span class="text-danger" asp-validation-for="Medium"></span><br>
    </div>
    <div class="form-group">
        <label asp-for="forSale">For Sale?</label><br>
        <input type="checkbox" asp-for="forSale"><br>
        @* <span class="text-danger" asp-validation-for="forSale"></span><br> *@
    </div>
    <div>
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>