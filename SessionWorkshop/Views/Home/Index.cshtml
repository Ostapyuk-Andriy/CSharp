@{
    ViewData["Title"] = "Home Page";
}
@model User
<div class="mb-3">
    <h1>Welcome!</h1>
    <h3>Please give your name:</h3>
    <form asp-controller="Home" asp-action="AddUser" method="post">
        <input class="form-control" asp-for="Name" id="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span><br/>
        <button class="btn btn-success">Add User</button>
    </form>
</div>
